
{{#feedback}}
<div class="shadow-pink mb-3 p-3">
    <div class="media">

        <div class="mr-3 bg-cover rounded-circle d-inline-block" style="background-image: url('{{{tutoricon}}}'); height:3em; width: 3em;"></div>

        <div class="media-body">
            <small>{{coursename}}</small>
            <h6><a href="{{{link}}}" class="">{{activityname}}</a></h6>
            <div class="d-flex">

                <div>
                    <span>{{grade}}</span> <small>/ {{maxgrade}}</small>
                </div>

                <div class="ml-auto">
                    <a data-toggle="collapse" href="#fb-{{id}}" role="button" aria-expanded="false"  aria-controls="fb-{{id}}" href="#">
                    View feedback <i class="fa fa-chevron-down" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="collapse" id="fb-{{id}}">
        <div class="py-2">{{{comment}}}</div>
    </div>

    <div class='mt-3 text-right'>
        <small>{{tutorname}} Â· {{date}}</small>
    </div>

</div>
{{/feedback}}


{{#nofeedback}}
<p>{{#str}} norecentfeedback, block_my_feedback {{/str}}</p>
{{/nofeedback}}

<div class="text-right py-3">
    <a href="{{{allfeedbackurl}}}" class="" ><i class="fa fa-arrow-right mr-2" aria-hidden="true"></i>
    {{#str}} viewallfeedback, block_my_feedback {{/str}}
    </a>
</div>


